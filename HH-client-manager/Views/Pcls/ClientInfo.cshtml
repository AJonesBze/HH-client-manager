@model IEnumerable<HHclientmanager.Models.Pcl>

@{
    ViewData["Title"] = "ClientInfo";
}

<h2>PCLS Assessments for Client</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                PCL Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeverityScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PclId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeverityScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PclId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PclId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PclId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
